{% extends 'base.html.twig' %}

{% block title %}Les articles!{% endblock %}

{% block body %}
<div class="container m-5">
    <div class="example-wrapper">
        <h1 class="mb-5">Voici la liste des arcticles</h1>
        <div class="row">
            
            {% for article in articles %}
                <div class="col-md-4">
                    <div class="card mb-3">
                        <h3 class="card-header">{{article.libelle}}</h3>
                        <img style="height: 200px; width: 100%; display: block;" src="{{article.image}}" alt="Card image">
                        <div class="card-body">
                            <p class="card-text">{{article.description}}</p>
                            <p{{article.prix}}â‚¬</p>
                        </div>
                        <div>
                            <a href="{{path('article_fiche', {'id' : article.id})}}" class="btn btn-primary">Voir la Fiche</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}